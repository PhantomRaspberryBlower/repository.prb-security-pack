<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="script.hello-world" name="Hello World" version="1.0.1" provider-name="Phantom Raspberry Blower">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.script" library="addon.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Hello World</summary>
    <description lang="en">This is my first addon that displays Hello World using a (xbmcgui) Dialog control.</description>
    <disclaimer lang="en">Use at your own risk</disclaimer>
    <language></language>
    <platform>all</platform>
    <license></license>
    <forum></forum>
    <website></website>
    <email></email>
    <source></source>
  </extension>
</addon>

<addon id="repository.prb-security-pack" name="PRB Security Repository" version="1.0.1" provider-name="Phantom Raspberry Blower">
  <extension point="xbmc.addon.repository" name="PRB Security Repository">
    <info compressed="false">http://raw.github.com/PhantomRaspberryBlower/repository.prb-security-pack/master/addons.xml</info>
    <checksum>http://raw.github.com/PhantomRaspberryBlower/repository.prb-security-pack/master/addons.xml.md5</checksum>
    <datadir zip="true">http://raw.github.com/PhantomRaspberryBlower/repository.prb-security-pack/master</datadir>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>PRB Security Repository</summary>
    <description>Phantom Raspberry Blower Security Pack video plug-ins for Kodi. Requires a Raspberry Pi with a PiCamera, Motion Detector and Adafruit Ultimate GPS installed.</description>
    <platform>all</platform>
  </extension>
</addon>
</addons>